<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"/>

    <ImageButton
        android:id="@+id/btn_commander_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_player"
        android:src="@drawable/remove_circle"
        android:onClick="btnClick"/>
    <TextView
        android:id="@+id/txt_commander"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_commander_down"
        android:layout_toRightOf="@+id/btn_commander_down"
        android:ems="3"/>

    <ImageButton
        android:id="@+id/btn_commander_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/txt_commander"
        android:layout_below="@+id/txt_player"
        android:src="@drawable/add_circle"
        android:onClick="btnClick"/>

</RelativeLayout>